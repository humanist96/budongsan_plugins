---
import BaseLayout from '../layouts/BaseLayout.astro'

const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, '')
---

<BaseLayout title="페이지를 찾을 수 없습니다" description="요청하신 페이지가 존재하지 않습니다.">
  <div class="error-page">
    <span class="error-page__code">404</span>
    <h1 class="error-page__title">페이지를 찾을 수 없습니다</h1>
    <p class="error-page__description">요청하신 페이지가 존재하지 않거나 이동되었을 수 있습니다.</p>
    <a href={baseUrl || '/'} class="error-page__link">홈으로 돌아가기</a>
  </div>
</BaseLayout>
